<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.rodzik.kamil.runnnn.viewmodel.training.DataViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.rodzik.kamil.runnnn.view.fragments.DataFragment">

        <Chronometer
            android:id="@+id/chronometer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:textSize="44sp"
            tools:text="00:00:00" />

        <TextView
            android:id="@+id/duration_text"
            android:layout_below="@id/chronometer"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/durationText"/>

        <RelativeLayout
            android:layout_marginTop="16dp"
            android:layout_below="@id/duration_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:visibility="@{viewModel.gpsRelatedFieldsVisibility}">

            <TextView
                android:id="@+id/distance"
                android:textSize="44sp"
                android:text="@{viewModel.distanceField}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="0.00"/>

            <TextView
                android:id="@+id/distance_text"
                android:layout_below="@id/distance"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/distanceUnitText"/>

        </RelativeLayout>

    </RelativeLayout>

</layout>
